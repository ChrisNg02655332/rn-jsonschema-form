{
  "name": "rn-jsonschema-form",
  "version": "0.22.0",
  "repository": "git@github.com:ChrisNg02655332/rn-jsonschema-form.git",
  "author": "ChrisNg02655332 <chris.dungnguyen@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/config-conventional": "^16.2.1",
    "@release-it/conventional-changelog": "^4.2.2",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "commitlint": "^16.2.3",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "prettier": "^2.6.0",
    "release-it": "^14.12.5",
    "typescript": "^4.6.2",
    "rollup": "^2.70.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "eslint": "^8.11.0",
    "eslint-config-react-app": "^7.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.28.0",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13"
  },
  "files": [
    "/lib"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "publish": "lerna publish",
    "build": "rollup -c",
    "lint": "eslint packages/**/*.tsx",
    "release": "git checkout main && git pull && release-it",
    "dev": "cd packages/playground && yarn dev"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {
      "no-console": [
        "error",
        {
          "allow": [
            "error",
            "warn"
          ]
        }
      ],
      "@typescript-eslint/no-unused-vars": "error",
      "react-hooks/exhaustive-deps": "off",
      "jsx-a11y/anchor-is-valid": "off",
      "import/no-anonymous-default-export": "off"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true
}
