{
  "version": "0.0.0",
  "repository": "git@github.com:ChrisNg02655332/rn-jsonschema-form.git",
  "author": "ChrisNg02655332 <chris.dungnguyen@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/config-conventional": "^16.2.1",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "commitlint": "^16.2.3",
    "eslint": "^8.11.0",
    "eslint-config-react-app": "^7.0.0",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "prettier": "^2.6.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.28.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lint": "eslint packages/**/*.tsx",
    "release": "git checkout main && git pull && release-it",
    "dev": "cd packages/playground && yarn dev"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "rules": {
      "no-console": [
        "error",
        {
          "allow": [
            "error",
            "warn"
          ]
        }
      ],
      "@typescript-eslint/no-unused-vars": "error",
      "react-hooks/exhaustive-deps": "off",
      "jsx-a11y/anchor-is-valid": "off",
      "import/no-anonymous-default-export": "off"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true
}
