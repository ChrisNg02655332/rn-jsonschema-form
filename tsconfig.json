{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declarationDir": "dist",
    "jsx": "react-jsx"
  },
  "exclude": ["node_modules", "__tests__"]
}
